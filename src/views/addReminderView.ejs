<html>

<head>
  <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/public/css/blogcss.css" />
  <%- include('../views/partials/links'); %>

</head>

<body>
  <nav class="navbar navbar-expand-lg bg-primary navbar-light">
    <div class="container mt-1">
      <h2 class="text-white">Fintrak</h2>
      <button class="navbar-toggler btn btn-secondary" type="button" data-toggle="collapse" data-target="#collapsenavbar">
        <span class="navbar-toggler-icon "></span>
      </button>
  
      <div class="collapse navbar-collapse text-center" id="collapsenavbar">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item px-2">
            <a href="/home" class="nav-link text-white"> HOME </a>
          </li>
          <li class="nav-item px-2">
            <a href="/myexpense" class="nav-link text-white"> EXPENSES </a>
          </li>
          <li class="nav-item px-2">
            <a href="/allreminders" class="nav-link text-dark"> REMINDER </a>
          </li>
          <li class="nav-item px-2">
            <a href="/profile" class="nav-link text-white"> RROFILE </a>
          </li>
          <li class="nav-item px-2">
            <a href="/logout" class="nav-link text-white"> LOGOUT </a>
          </li>
          <li class="nav-item px-4">
            <b> <a class="nav-link text-white"> <i class="fa fa-user" style="font-size:20px;"></i>&nbsp;<%= username %> </a> </b>
          </li>
        </ul>
      </div>
    </div>
  </nav>


  <div class="container mt-3">
    <h3 class="text-center">Add Admin Here</h3>
    <div class="d-flex justify-content-center">
      <form class="mt-4 col-md-6" id="addadmin" action="/reminder" method="post">
        <div class="form-group">
          <label for="date">Date</label>
          <input type="date" class="form-control" id="date" name="date" placeholder="Date" required>
        </div>
        <div class="form-group">
          <label for="subject">Email ID</label>
          <input type="text" class="form-control" id="subject" name="subject" placeholder="Subject" required>
        </div>
        <div class="form-group">
          <label for="body">Email Body</label>
          <textarea class="form-control z-depth-1" id="body" name="body" rows="4"
            placeholder="Write something here..." required></textarea>
        </div>
        <div class="form-group">
            <label for="isReimburse">Interval</label>
            <select class="js-example-basic-multiple form-control" name="interval" id="interval">
              <option class="element" value="None">None</option>
              <option class="element" value="Weekly">Weekly</option>
              <option class="element" value="Monthly">Monthly</option>
            </select>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-info mt-2">Submit</button>
          <button class="btn btn-danger mt-2 ml-1"><a href="/allreminders" class="text-light"> Cancel </a></button>
        </div>
      </form>
    </div>



    <%- include('../views/partials/footer'); %>

     </body>

</html>